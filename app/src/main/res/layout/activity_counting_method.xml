        <!--</LinearLayout>-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:gravity="bottom">

        <include layout="@layout/footer"/>


    </LinearLayout>


</LinearLayout>
